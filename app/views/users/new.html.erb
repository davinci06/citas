<% provide(:title, 'Sign up') %>
<div class="jumbotron">
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<div class="panel panel-success">
        <div class="panel-heading">
           <h3 class="panel-title">Create account</h3>
            </div>
            <div class="panel-body">
		    <%= form_for(@user) do |f| %>
		      <%= render 'shared/error_messages' %>

		      <%= f.label :name %>
		      <%= f.text_field :name, class: 'form-control' %>

		      <%= f.label :email %>
		      <%= f.email_field :email, class: 'form-control' %>

		      <%= f.label :password %>
		      <%= f.password_field :password, class: 'form-control' %>

		      <%= f.label :password_confirmation, "Confirmation" %>
		      <%= f.password_field :password_confirmation, class: 'form-control' %>
		      <div class="field">
		        <%= f.label :tipo_usuario %><br/>
		        <%= f.select :tipousuario, [['Elige un tipo de usuario?', nil], 'Medico', 'Paciente']%>
		        </div>
		      
		      <%= f.submit "Create my account", class: "btn btn-success btn-lg btn-block" %>
		    <% end %>
              <br>
            <p class="text-center">Â¿Do you already have an account?</p>
		<p class="text-center"> <%= link_to "log in", root_path, class: "label label-success" %></p>


  			</div>
        </div>
  </div>
</div>
</div>

